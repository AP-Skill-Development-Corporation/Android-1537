<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/countries_design_background"
    android:layout_margin="@dimen/margin_value_for_data"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/country_name"
        android:textAllCaps="true"
        android:textSize="@dimen/countries_text_size"
        android:textStyle="bold"
        android:textColor="@color/country_name_text_color"
        android:layout_margin="@dimen/countries_text_view_margin"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</FrameLayout>